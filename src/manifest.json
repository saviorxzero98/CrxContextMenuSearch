{
    "manifest_version": 2,
    "name": "Chrome Context Menu Search",
    "description": "Chrome 右鍵選單搜尋工具",
    "version": "1.1.1",
    "icons":
	{
		"128": "icon/128.png",
		"16": "icon/16.png",
		"48": "icon/48.png"
	},
    "permissions": [
        "contextMenus",
        "tabs",
        "downloads",
        "storage",
        "*://*/*"
    ],
    "background": {
        "page": "html/background.html",
        "persistent": true
    }
}
